{
    "name": "carlosafonso/php-dns-client",
    "type": "library",
    "description": "A DNS client written purely in PHP",
    "keywords": [
        "carlosafonso",
        "dns"
    ],
    "homepage": "https://github.com/carlosafonso/php-dns-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Afonso",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Afonso\\Dns\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Afonso\\Dns\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
